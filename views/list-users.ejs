<%- include('../templates/header') -%>
<div class="row">
    <div class="col-md-2">
        <%- include('../templates/leftnav') -%>
    </div>
    <div class="col-md-8">
<h2><%= hd %></h2>
<a href="/dashboard"><h4>Back home </h4></a>
<a href="/user" class="btn btn-sm btn-primary">Add User</a><br/><br/>
<table class="table table-dark table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone No.</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(function(user){ %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone_no %></td>
            <td>
                <a href="edit/<%= user.id %>" class="btn btn-sm btn-primary">Edit</a>
                <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>
    </div>
    <div class="col-md-2">
        <%- include('../templates/rightnav') -%>
</div>
</div>
<div class="footer" style="border-color: blue; height: 10px; width: auto; margin: 2px;">
    <%- include('../templates/footer') -%>
</div>
